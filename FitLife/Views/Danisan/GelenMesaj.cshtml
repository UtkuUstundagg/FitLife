<!DOCTYPE html>
<html lang="en">
@{
    ViewData["Title"] = "Gelen Kutusu";
}
@model List<MesajModel>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

</head>

<body>

    <div class="Signup-Card">
        <h1>Gelen Kutusu</h1>

        <ul class="Signup-Form">
            Antrenör:
            @foreach (var item in Model)
            {
                <li>@item.gondericiKey: @item.icerik</li>
                @Html.ActionLink("Yanıtla","Yanitla","Danisan", 
                new{key = @item.gondericiKey}, new{style="width: 15%; height: 25px; border-radius: 1.25rem; background: #216ce7; color: #f9f9f9; text-align: center; cursor: pointer;"})
            }
        </ul>
    </div>

    @*<div class="Signup-Card">
        <h1>Gelen Kutusu</h1>
    </div>

    <form asp-action="Yanitla" asp-controller="Danisan" class="Signup-Form" method="post">
        <div class="kullanici-key">
            <label for="antrenorKey">Gönderici: </label>
            <input type="text" asp-for="gondericiKey" ReadOnly="true" />
            <label for="antrenorKey">Alıcı: </label>
            <input type="text" asp-for="aliciKey" ReadOnly="true" />
            <label for="antrenorKey">İçerik: </label>
            <input type="text" asp-for="icerik" ReadOnly="true" />
        </div>
        <button id="Giris" type="submit">Yanıtla</button>
