<!DOCTYPE html>
<html lang="en">
@{
    ViewData["Title"] = "Kayıt Ol";
}
@model AntrenorModel
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

</head>

<body>

    <div class="Signup-Card">
        <h1>Profiliniz</h1>
        <h2>Antrenor Bilgilerinizi Buradan Güncelleyebilirsiniz</h2>
    </div>
    <form asp-action="AntrenorProfilGuncelle" asp-controller="Antrenor" method="post" class="Signup-Form">
        <label for="antrenorKey">Key:</label>
        <input type="text" asp-for="antrenorKey" ReadOnly="true" />

        <label for="isim">Adınız:</label>
        <input type="text" asp-for="isim" placeholder="Adınız" />

        <label for="soyisim">Soyadınız:</label>
        <input type="text" asp-for="soyisim" placeholder="Soyadınız" />

        <label for="telefon">Telefonunuz:</label>
        <input type="number" asp-for="telefon" placeholder="5431237698" />

        <label for="email">E-postanız:</label>
        <input type="email" asp-for="email" placeholder="Örnek123@gmail.com" />

        <label for="sifre">Şifreniz:</label>
        <input type="text" asp-for="sifre" placeholder="Şifre" />

        <label for="cinsiyet">Cinsiyetiniz:</label>
        <input type="text" asp-for="cinsiyet" placeholder="Cinsiyet" />

        <label for="dogumtarihi">Doğum Tarihiniz:</label>
        <input type="date" asp-for="dogumtarihi" placeholder="Doğum Tarihi" />

        <label for="deneyimler">Deneyimleriniz:</label>
        <input type="text" asp-for="deneyimler" placeholder="Deneyimlerinizi Giriniz" />

        <label for="kasKazanma">Kas Kazanma:</label>
        <input type="checkbox " asp-for="kasKazanma" />

        <label for="kiloAldirma">Kilo Aldirma:</label>
        <input type="checkbox " asp-for="kiloAldirma" />

        <label for="kiloVerdirme">Kilo Verdirme:</label>
        <input type="checkbox " asp-for="kiloVerdirme" />

        <label for="kiloKoruma">Kilo Koruma:</label>
        <input type="checkbox " asp-for="kiloKoruma" />


        <button id="Giris" type="submit">Güncelle</button>
    </form>

    <form asp-action="AntrenorSayfasinaDon" asp-controller="Antrenor" method="post" class="Signup-Form">
        <button id="Giris" type="submit">Antrenor Sayfasına Dön</button>
    </form>

</body>

<style>

    * {
        box-sizing: border-box;
    }

    html, body, .wrapper {
        height: 50%;
    }

    body {
        display: grid;
        place-items: center;
        margin: 0;
        padding: 0 24px;
        color: #000;
    }

    .kullanici-key {
        width: 100%;
        font-weight: 600;
    }

        .kullanici-key > input {
            padding: 0 16px;
            border-radius: 1.25rem;
            border: 0;
            width: 20%;
        }

    .Signup-Card {
        position: static;
        z-index: 3;
        width: 100%;
        margin: 0 20px;
        padding: 70px 30px 44px;
        border-radius: 1.25rem;
        background: #fff;
        text-align: center;
    }

        .Signup-Card > h1 {
            font-size: 36px;
            font-weight: 600;
            margin: 0 0 12px;
        }



    .Signup-Form {
        width: 100%;
        margin: 0;
        display: grid;
        gap: 16px;
    }

        .Signup-Form > input, .Signup-Form > button {
            width: 100%;
            height: 50px;
        }

        .Signup-Form > input {
            border: 2px solid #ebebeb;
            font-family: inherit;
            font-size: 15px;
            padding: 0 16px;
            border-radius: 1.25rem;
            transition: all 0.375s;
        }

            .Signup-Form > input:hover {
                border: 2px solid #10449A;
            }

        .Signup-Form > button {
            cursor: pointer;
            width: 100%;
            padding: 0 16px;
            border-radius: 1.25rem;
            background: #216ce7;
            color: #f9f9f9;
            border: 0;
            font-family: inherit;
            font-size: 1rem;
            font-weight: 600;
            text-align: center;
            letter-spacing: 2px;
            transition: all 0.375s;
            margin-bottom: 5px;
            margin-top: 5px;
        }

            .Signup-Form > button:hover {
                background: #10449A;
            }

        .Signup-Form > a {
            color: #216ce7;
            font-size: 0.9rem;
            text-align: left;
            text-decoration: none;
            margin-bottom: 6px;
            transition: all 0.375s;
        }

            .Signup-Form > a:hover {
                color: #10449A;
            }

</style>
</html>
